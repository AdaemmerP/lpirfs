Package: lpirfs
Type: Package
Title: Local Projections Impulse Response Functions
Version: 0.1.1
Authors@R: c(
            person("Philipp", "Adämmer", 
                    email   = "adaemmer@hsu-hh.de", 
                    role    = c("aut", "cre"),
                    comment = c(ORCID = "0000-0003-3770-0097")),
