    doParallel(>= 1.0.11),
    dplyr(>= 0.7.4),
    foreach(>= 1.4.3),
    ggplot2(>= 2.2.1),
    ggthemes(>= 3.4.0),
    gtable(>= 0.2.0),
    mFilter(>= 0.1-3),
    Rcpp(>= 0.12.17),
    rlang(>= 0.2.0), 
    rmarkdown(>= 1.9), 
    vars(>= 0.7.4)
